<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:padding="16dp"
    android:background="@drawable/gradient_background"
    tools:context=".Getting_Started">


    <TextView
        android:id="@+id/textView"
        android:layout_width="347dp"
        android:layout_height="129dp"
        android:layout_marginTop="32dp"
        android:elevation="4dp"
        android:gravity="center"
        android:padding="16dp"
        android:text="This mobile app was developed for Brian's Front-End Developer examination at Thynker Tech. It functions as a web viewer, showcasing Brian's ability to build responsive and user-friendly applications."
        android:textColor="@color/white"
        android:textSize="16sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <androidx.appcompat.widget.AppCompatButton

        android:id="@+id/getStart"
        android:layout_width="326dp"
        android:layout_height="55dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_btn"
        android:elevation="8dp"
        android:fontFamily="@font/raleway"
        android:padding="10dp"
        android:text="Let's Get Started"
        android:textColor="@color/white"
        android:textSize="20sp"
       android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.586" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="306dp"
        android:layout_height="305dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/jps" />

</androidx.constraintlayout.widget.ConstraintLayout>
